# TradeFlow Environment Variables
# Copy this file to .env and fill in your actual values
# Never commit .env to version control - it's already in .gitignore

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project dashboard: https://app.supabase.com/
# Project Settings > API

# Your Supabase project URL
EXPO_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anonymous/public key (safe to expose in frontend)
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase service role key (NEVER expose in frontend - server-side only)
# Used for admin operations, bypassing RLS policies
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
# Used by the AI agent crew (Dispatch Strategist, Route Optimizer, Inventory Specialist)

OPENAI_API_KEY=sk-your_openai_api_key_here

# Optional: Organization ID if you're using OpenAI Teams/Enterprise
# OPENAI_ORGANIZATION_ID=org-your_organization_id_here

# =============================================================================
# ROUTING ENGINE CONFIGURATION
# =============================================================================
# Self-hosted VROOM/OSRM routing engine endpoints
# These will be configured when the routing engine is deployed in Phase 2

# VROOM engine URL (for vehicle routing problems)
# VROOM_API_URL=https://your-vroom-engine.com/api

# OSRM engine URL (for routing data)
# OSRM_API_URL=https://your-osrm-engine.com/api

# =============================================================================
# THIRD-PARTY HARDWARE STORE APIS (Phase 3)
# =============================================================================
# These will be used by the Inventory & Prep Specialist for real-time stock checks

# Lowe's API credentials (if using)
# LOWES_API_KEY=your_lowes_api_key_here
# LOWES_API_SECRET=your_lowes_api_secret_here

# Grainger API credentials (if using)
# GRAINGER_API_KEY=your_grainger_api_key_here
# GRAINGER_CLIENT_ID=your_grainger_client_id_here

# Fastenal API credentials (if using)
# FASTENAL_API_KEY=your_fastenal_api_key_here

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Set to 'development', 'staging', or 'production'
NODE_ENV=development

# Enable debug logging for development
DEBUG=true

# Expo development configuration
# EXPO_DEBUG=true

# =============================================================================
# ANALYTICS & MONITORING (Future)
# =============================================================================
# These may be added in later phases for app analytics and error monitoring

# Sentry DSN for error tracking
# SENTRY_DSN=your_sentry_dsn_here

# Mixpanel token for analytics
# MIXPANEL_TOKEN=your_mixpanel_token_here

# =============================================================================
# SECURITY & ENCRYPTION
# =============================================================================
# JWT secret for additional security (if needed)
# JWT_SECRET=your_jwt_secret_here

# App secret for additional encryption (if needed)
# APP_SECRET=your_app_secret_here
